    <!-- Menú Derecha -->
    <div class="hidden md:flex gap-8">
      <a href="/" class="text-lg text-pink-400 font-medium hover:drop-shadow-[0_0_15px_rgba(255,0,150,1)] transition">Inicio</a>
      <!-- <a href="/metas" class="text-lg text-pink-400 font-medium hover:drop-shadow-[0_0_15px_rgba(255,0,150,1)] transition">Metas</a> -->
